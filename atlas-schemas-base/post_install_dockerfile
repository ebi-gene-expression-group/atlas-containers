
USER root
RUN wget -qO- https://repo1.maven.org/maven2/org/flywaydb/flyway-commandline/6.3.2/flyway-commandline-6.3.2-linux-x64.tar.gz | tar xvz && ln -s `pwd`/flyway-6.3.2/flyway /opt/conda/envs/base/bin
# needed since atlas-schemas will copy stuff there
RUN chown micromamba /opt/conda/envs/base/bin/flyway
USER micromamba
